.our-affairs
  box-sizing border-box
  padding 200px 0
  display flex
  position relative
  justify-content flex-end
  min-height 1554px
  @media(max-width 910px)
    flex-direction column
    padding 50px 0
  &__description
    position absolute
    left 50px
    font-weight 600
    color #316099
    font-size 36px
    max-width 358px
    width 100%
    line-height 46px
    @media(max-width 910px)
      position static
      margin 0 auto
      margin-bottom 30px
      font-size 32px
      line-height 42px
    @media(max-width 420px)
      text-align center
      max-width 320px
      font-size 26px
      line-height 36px
  &__card
    @media(max-width 910px)
      margin 30px 0
    &_middle
      margin auto 0
      @media(max-width 910px)
        margin 30px 0
  &__column
    margin-right 100px
    min-height 100%
    display flex
    flex-direction column
    justify-content space-between
    @media(max-width 990px)
      margin-right 50px
    @media(max-width 910px)
      min-height auto
      margin 0 auto

