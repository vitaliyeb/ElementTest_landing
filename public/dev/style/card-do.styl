.card-do
  width 380px
  height 525px
  background-color #fff
  box-shadow 5px 20px 50px rgba(16, 112, 177, 0.2)
  border-radius 10px
  box-sizing border-box
  padding 48px
  @media(max-width 420px)
    padding 20px
    max-width 380px
    height auto
    width 100%
  &__image
    position absolute
    margin 0 auto
    left 23px
    bottom 0
    @media(max-width 420px)
      position static
      max-height 100%
      max-width 100%
      margin 0 auto
      display block
    &-wrapper
      height 132px
      position relative
  &__subheading
    color #1F3F68
    font-size 20px
    margin-top 50px
    margin-bottom 16px
    line-height 30px
    font-weight bold
  &__description
    color #1F3F68
    opacity 0.6
    font-size 16px
    line-height 26px
  &__link
    margin-top 32px
    display inline-block
    color #5A98D0
    font-size 14px
    line-height 30px
    font-weight 600
    &:before
      content ''
      display block
      float right
      margin-top 6px
      margin-left 28px
      width 16px
      height 16px
      background-image url("/images/vect.svg")