.footer-navigate
  display flex
  flex-grow 1
  justify-content space-evenly
  @media(max-width 640px)
    margin-bottom 30px
    width 100%
    order 1
  &__column
    width 163px
  &__subheading
    font-size 20px
    line-height 30px
    color #fff
    margin-bottom 25px
  &__list
    padding 0
    list-style none
  &__item
    margin-bottom 10px
  &__link
    font-size 16px
    line-height 26px
    color #fff