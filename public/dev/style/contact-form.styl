.contact-form
  max-width 540px
  background-color #fff
  cursor default
  width 100%
  box-shadow 5px 10px 50px rgba(16, 112, 177, 0.2)
  border-radius 10px
  box-sizing border-box
  padding 56px
  @media(max-width 560px)
    padding 25px
    max-height 100vh
  &__heading
    color: #1F3F68;
    font-size 20px
    margin-bottom 48px
    line-height 30px
    @media(max-width 560px)
      margin-bottom 25px
  &__title
    color #1F3F68
    opacity 0.8
    margin-bottom 10px
    font-size 16px
    opacity .8
    line-height 30px
  &__input
    box-sizing border-box
    width 100%
    padding 21px 40px
    border 1px solid #356EAD
    outline none
    box-shadow 5px 10px 50px rgba(16, 112, 177, 0.2)
    border-radius 10px
    margin-bottom 30px
    opacity .4
    @media(max-width 560px)
      padding 7px 15px
      margin-bottom 15px
  &__textarea
    width 100%
    height 128px
    opacity: 0.4;
    border: 1px solid #356EAD
    box-sizing border-box
    border-radius 10px
    resize none
    padding 21px 36px
    outline none
    @media(max-width 560px)
      height 75px
      padding 15px 20px
  &__submit
    width 100%
    background: #5A98D0;
    padding 23px 0px
    box-sizing border-box
    text-align center
    box-shadow 5px 20px 50px rgba(16, 112, 177, 0.2)
    border-radius 10px
    cursor pointer
    color #fff
    margin-top 72px
    @media(max-width 560px)
      padding 15px 0px
      margin-top 30px
