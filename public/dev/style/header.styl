.header
  min-height 48px
  display flex
  flex-wrap wrap
  align-items center
  justify-content space-between
  &-wrapper
    &_contact
      margin 40px auto
    &_index
      background linear-gradient(0deg,#98c3e857 8.84%,rgba(152,195,232,0) 31.12%);
      min-height 768px
      box-sizing border-box
      padding-top 40px
      @media(max-width 620px)
        min-height auto
        padding-bottom 30px
  &-navigate
    height 0
    width 100%
    transition: 1s;
    overflow hidden
    &_active
      height 40px
      margin-top 25px
    &__list
      list-style none
      width 100%
      display flex
      max-width 940px
      margin 0 auto
      padding  0
    &__item
      width 100%
      text-align center
      &:hover
        background-color #4793c7
        & ^[-2]__link
          color #fff
    &__link
      line-height 40px
      width 100%
      display block
      font-size 24px
      color black
      @media(max-width 420px)
        font-size 18px
