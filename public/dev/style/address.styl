.address
  width 300px
  margin-bottom 64px
  @media(max-width 640px)
    margin-bottom 20px
    order 2
  &__company
    &-info
      display flex
      align-items center
      margin-bottom 30px
    &-name
      font-size 28px
      line-height 22px
      color #fff
      margin-left 15px
      font-weight 600
  &__other
    display flex
    margin-top 24px
    &-text
      font-size 16px
      line-height 26px
      color #fff
  &__subheading
    font-size 16px
    line-height 26px
    font-weight 600
    width 19px
    color #fff
    margin-right 15px

