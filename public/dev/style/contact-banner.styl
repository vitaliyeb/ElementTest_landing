.contact-banner
  height 250px
  width 100%
  background-image url("/images/contactBanner.svg")
  background-repeat no-repeat
  display inline-block
  background-size cover
  &__heading
    font-size 44px
    margin-top 50px
    margin-bottom 20px
    line-height 74px
    text-align center
    color #fff
    @media(max-width 540px)
      font-size 36px
      margin-bottom 10px
      margin-top 35px
  &__description
    max-width 780px
    color #fff
    font-size 20px
    line-height 30px
    opacity .6
    width 100%
    margin 0 auto
    text-align center
    @media(max-width 540px)
      font-size 16px