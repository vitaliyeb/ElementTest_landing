.burger-button
  width 24px
  height 16px
  position relative
  cursor pointer
  background-color aliceblue
  &_active
    & > ^[-1]__line
      &_top
        top 8px
        transform rotate(-45deg)
      &_middle
        display none
      &_bottom
        bottom 5px
        transform rotate(45deg)
  &__line
    width 100%
    height 3px
    position absolute
    background-color #356EAD
    &_top
      top 0
    &_middle
      top calc(16px / 2 - 1.5px)
    &_bottom
      bottom 0
