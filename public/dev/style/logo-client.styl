.logo-client
  margin 0 auto
  flex-wrap wrap
  min-height 256px
  display flex
  max-width 940px
  width 100%
  &__item
    max-width 235px
    border-right 1px solid #ffffff42
    border-bottom 1px solid #ffffff42
    box-sizing border-box
    width 100%
    height 128px
    display flex
    align-items center
    justify-content center
    &:nth-child(5),
    &:nth-child(6),
    &:nth-child(7),
    &:nth-child(8)
      border-bottom none
    &:nth-child(4),
    &:nth-child(8)
      border-right none
    @media(max-width 955px)
      max-width 50%
      &:nth-child(2n)
        border-right none
      &:nth-child(1n)
        border-bottom 1px solid #ffffff42
      &:nth-child(7),
      &:nth-child(8)
        border-bottom none
    &_last
      background #1f3f6838
  &__title,
  &__link
    font-size 20px
    line-height 46px
    color #fff;
    @media(max-width 420px)
      font-size 16px

